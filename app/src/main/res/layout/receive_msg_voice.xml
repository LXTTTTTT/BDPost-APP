<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_send_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="10sp"
        android:text="02-09 09:13"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/avatar_img"
            android:layout_width="40dp"
            android:layout_marginStart="10dp"
            android:layout_height="40dp"
            android:background="@mipmap/default_avatar" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/audioPlayLL"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/message_receive_bg"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/audioPlayImg"
                android:layout_width="13dp"
                android:layout_height="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/anim_voice_left_play"/>
            <TextView
                android:id="@+id/secondsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="0″"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/isEnhance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:text="已增强"
            android:textSize="10dp"
            android:visibility="visible"/>

    </LinearLayout>


</LinearLayout>